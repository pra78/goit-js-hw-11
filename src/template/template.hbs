{{#each this}}
<div class="photo-card">
    <a class="gallery__item" href="{{this.largeImageURL}}">
        <img class="gallery__image" src="{{this.webformatURL}}" alt="{{this.tags}}" loading="lazy" />
        <div class="info">
            <p class="info-item">
                <b>Likes </b>
                {{this.likes}}
            </p>
            <p class="info-item">
                <b>Views </b>
                {{this.views}}
            </p>
            <p class="info-item">
                <b>Comments </b>
                {{this.comments}}
            </p>
            <p class="info-item">
                <b>Downloads </b>
                {{this.downloads}}
            </p>
        </div>
    </a>
</div>
{{/each}}